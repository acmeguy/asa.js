{
  "compilerOptions": {
    "sourceMap": true,
    "lib": ["dom", "esnext"],
    "noImplicitAny": false,
    "module": "esnext",
    "target": "esnext",
    "allowJs": true,
    "esModuleInterop": true,
    "outDir": "build",
    "experimentalDecorators": true,
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["build", "node_modules/**/*", "rollup.config.js"],
  "typeRoots": ["./node_modules/@types", "./src"]
}
